@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.FaturaSeriNo @k.FaturaSıraNo </td>
            <td>@k.Tarih</td>
            <td>@k.Saat</td>
            <td>@k.Toplam</td>

            <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-outline-warning" style="border-color:goldenrod;">Detaylar</a></td>
            <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-danger" style="border-color:palevioletred; color:white;">Kalem</a></td>
        </tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-outline-info">Yeni Fatura Girişi</a>
<br />
<br />
<button type="button" class="btn btn-primary" style="background-color:mediumslateblue; color:white;" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSıraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Geri Dön</button>
            </div>
        </div>
    </div>
</div>


